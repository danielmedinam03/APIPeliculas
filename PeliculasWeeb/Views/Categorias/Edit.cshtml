@model PeliculasWeb.Models.Categoria
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-primary">Crear una categoría</h2>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Update">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nombre"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <div class="col-8">
                        <input id="fechaCreacion" type="text" asp-for="FechaCreacion" class="form-control" readonly />
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Crear categoría</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index">Volver</a>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#fechaCreacion").datepicker({
                changeMonth: false,
                changeYear: false,
                yearRange: "1500:2022",
                dateFormat: "yy-mm-dd"
            }).datepicker("setDate", new Date())
        })
    </script>

}


