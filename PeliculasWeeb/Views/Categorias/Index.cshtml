
@{
    ViewData["Title"] = "Listado de categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-4">
    <div class="col-sm-12">
        @if (TempData["alertDanger"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="myAlert">
                <h5> <strong>@TempData["alertDanger"]</strong> </h5>
                <button type="button" class="close" data-dismiss="alert" arial-label="Close" onclick="closeAlert()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        else if (TempData["alertSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="myAlert">
                <h5> <strong>@TempData["alertSuccess"]</strong> </h5>
                <button type="button" class="close" data-dismiss="alert" arial-label="Close" onclick="closeAlert()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    </div>
</div>
<div class="container p-4">

    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Listado de categorias</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-success">Crear nueva categoria categoria</a>
        </div>
    </div>

    <br />
    <br />
    <div class="p-3">
        <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre categoria</td>
                    <td>Fecha creación</td>
                    <td>Acciones</td>
                </tr>
            </thead>
        </table>
    </div>

</div> 


@section Scripts{
    <script src="~/js/Categorias.js"></script>
    <script>
        function closeAlert() {
            var alertElement = document.getElementById('myAlert');
            alertElement.style.display = 'none';
        }
    </script>
}
